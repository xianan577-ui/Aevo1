                personality: "理性、严谨、喜欢思考"
            }
        ];
        
        let contacts = [
            { id: 1, name: "AI助手", status: "在线", isAI: true, avatarText: "AI" },
            { id: 2, name: "小美", status: "刚刚在线", isAI: false, avatarText: "美" },
            { id: 3, name: "张明", status: "2小时前在线", isAI: false, avatarText: "张" },
            { id: 4, name: "客服中心", status: "24小时在线", isAI: true, avatarText: "客" },
            { id: 5, name: "技术支援", status: "在线", isAI: true, avatarText: "技" },
            { id: 6, name: "李思", status: "昨天在线", isAI: false, avatarText: "李" },
            { id: 7, name: "王芳", status: "忙碌", isAI: false, avatarText: "王" }
        ];
        
        let chats = [
            { 
                id: 1, 
                contactId: 1, 
                name: "AI助手", 
                lastMessage: "您好！我是AI助手，有什么可以帮助您的吗？", 
                time: "10:30", 
                unread: 3,
                messages: [
                    { id: 1, text: "您好！我是AI助手，有什么可以帮助您的吗？", time: "10:30", sender: "ai" },
                    { id: 2, text: "你好，我想了解一下这个应用的功能", time: "10:32", sender: "user" },
                    { id: 3, text: "这是一个基于AI的聊天应用，您可以与AI角色聊天，也可以管理联系人，设置不同的对话人设。", time: "10:33", sender: "ai" }
                ]
            },
            { 
                id: 2, 
                contactId: 2, 
                name: "小美", 
                lastMessage: "新的设计稿已经发给你了", 
                time: "昨天", 
                unread: 1,
                messages: [
                    { id: 1, text: "你好！", time: "昨天 14:20", sender: "user" },
                    { id: 2, text: "你好啊，最近怎么样？", time: "昨天 14:22", sender: "ai" },
                    { id: 3, text: "新的设计稿已经发给你了", time: "昨天 16:45", sender: "ai" }
                ]
            },
            { 
                id: 3, 
                contactId: 3, 
                name: "张明", 
                lastMessage: "代码已经提交到仓库了", 
                time: "周三", 
                unread: 0,
                messages: [
                    { id: 1, text: "关于那个项目，我有一个想法", time: "周三 09:15", sender: "user" },
                    { id: 2, text: "请说，我听着", time: "周三 09:16", sender: "ai" },
                    { id: 3, text: "代码已经提交到仓库了", time: "周三 11:30", sender: "ai" }
                ]
            }
        ];
        
        // DOM元素
        const splashScreen = document.getElementById('splashScreen');
        const appContainer = document.getElementById('appContainer');
        const navItems = document.querySelectorAll('.nav-item');
        const pages = document.querySelectorAll('.page');
        const apiUrlInput = document.getElementById('api-url');
        const apiKeyInput = document.getElementById('api-key');
        const saveApiBtn = document.getElementById('saveApiBtn');
        const chatsList = document.querySelector('.chats-list');
        const contactsList = document.querySelector('.contacts-list');
        const characterCards = document.getElementById('characterCards');
        const addCharacterBtn = document.getElementById('addCharacterBtn');
        const chatMessages = document.getElementById('chatMessages');
        const messageInput = document.getElementById('messageInput');
        const sendMessageBtn = document.getElementById('sendMessageBtn');
        const chatPage = document.getElementById('chatPage');
        const chatWithName = document.getElementById('chatWithName');
        const chatAvatar = document.getElementById('chatAvatar');
        const chatStatus = document.getElementById('chatStatus');
        const fontButtons = document.querySelectorAll('.font-btn');
        
        // 启动页动画
        setTimeout(() => {
            splashScreen.classList.add('hidden');
            appContainer.classList.remove('hidden');
            loadInitialData();
        }, 2000);
        
        // 导航菜单点击事件
        navItems.forEach(item => {
            item.addEventListener('click', function() {
                const page = this.getAttribute('data-page');
                
                // 更新导航状态
                navItems.forEach(nav => nav.classList.remove('active'));
                this.classList.add('active');
                
                // 显示对应页面
                pages.forEach(p => p.classList.add('hidden'));
                document.getElementById(`${page}Page`).classList.remove('hidden');
                
                currentPage = page;
                
                // 如果切换到聊天列表，更新列表
                if (page === 'chats') {
                    renderChatsList();
                } else if (page === 'contacts') {
                    renderContactsList();
                } else if (page === 'characters') {
                    renderCharacterCards();
                }
            });
        });
        
        // 保存API配置
        saveApiBtn.addEventListener('click', function() {
            const apiUrl = apiUrlInput.value;
            const apiKey = apiKeyInput.value;
            
            if (!apiUrl || !apiKey) {
                alert('请输入API地址和密钥');
                return;
            }
            
            // 在实际应用中，这里应该将API配置保存到本地存储或发送到服务器
            localStorage.setItem('aevo_api_url', apiUrl);
            localStorage.setItem('aevo_api_key', apiKey);
            
            alert('API配置已保存！');
        });
        
        // 从本地存储加载API配置
        function loadApiConfig() {
            const savedApiUrl = localStorage.getItem('aevo_api_url');
            const savedApiKey = localStorage.getItem('aevo_api_key');
            
            if (savedApiUrl) apiUrlInput.value = savedApiUrl;
            if (savedApiKey) apiKeyInput.value = savedApiKey;
        }
        
        // 初始化数据加载
        function loadInitialData() {
            loadApiConfig();
            renderChatsList();
            renderContactsList();
            renderCharacterCards();
        }
        
        // 渲染聊天列表
        function renderChatsList() {
            chatsList.innerHTML = '';
            
            chats.forEach(chat => {
                const contact = contacts.find(c => c.id === chat.contactId);
                const chatItem = document.createElement('div');
                chatItem.className = 'chat-item';
                chatItem.setAttribute('data-chat-id', chat.id);
                
                chatItem.innerHTML = `
                    <div class="chat-avatar">${contact?.avatarText || chat.name.charAt(0)}</div>
                    <div class="chat-info">
                        <div class="chat-name">${chat.name}</div>
                        <div class="chat-last-msg">${chat.lastMessage}</div>
                    </div>
                    <div class="chat-time">${chat.time}</div>
                    ${chat.unread > 0 ? `<div class="unread-badge">${chat.unread}</div>` : ''}
                `;
                
                chatItem.addEventListener('click', function() {
                    const chatId = parseInt(this.getAttribute('data-chat-id'));
                    openChat(chatId);
                });
                
                chatsList.appendChild(chatItem);
            });
        }
        
        // 渲染联系人列表
        function renderContactsList() {
            contactsList.innerHTML = '';
            
            contacts.forEach(contact => {
                const contactItem = document.createElement('div');
                contactItem.className = 'contact-item';
                contactItem.setAttribute('data-contact-id', contact.id);
                
                contactItem.innerHTML = `
                    <div class="contact-avatar">${contact.avatarText}</div>
                    <div class="contact-info">
                        <div class="contact-name">${contact.name}</div>
                        <div class="contact-status">${contact.status}</div>
                    </div>
                    ${contact.isAI ? '<i class="fas fa-robot" style="color: #07c160;"></i>' : ''}
                `;
                
                contactItem.addEventListener('click', function() {
                    const contactId = parseInt(this.getAttribute('data-contact-id'));
                    const contact = contacts.find(c => c.id === contactId);
                    
                    // 查找是否已有与这个联系人的聊天
                    let existingChat = chats.find(chat => chat.contactId === contactId);
                    
                    if (!existingChat) {
                        // 创建新聊天
                        const newChatId = chats.length > 0 ? Math.max(...chats.map(c => c.id)) + 1 : 1;
                        existingChat = {
                            id: newChatId,
                            contactId: contactId,
                            name: contact.name,
                            lastMessage: "开始聊天吧",
                            time: "刚刚",
                            unread: 0,
                            messages: []
                        };
                        
                        chats.push(existingChat);
                        renderChatsList();
                    }
                    
                    openChat(existingChat.id);
                });
                
                contactsList.appendChild(contactItem);
            });
        }
        
        // 渲染人设卡片
        function renderCharacterCards() {
            characterCards.innerHTML = '';
            
            characters.forEach(character => {
                const genderText = character.gender === 'male' ? '男' : character.gender === 'female' ? '女' : '其他';
                const avatarColor = character.gender === 'male' ? '#4a90e2' : character.gender === 'female' ? '#e91e63' : '#07c160';
                
                const card = document.createElement('div');
                card.className = 'character-card';
                card.setAttribute('data-character-id', character.id);
                
                card.innerHTML = `
                    <div class="character-card-header">
                        <div class="character-avatar" style="background-color: ${avatarColor}; color: white;">
                            ${character.name.charAt(0)}
                        </div>
                        <div>
                            <div class="character-name">${character.name}</div>
                            <div class="character-gender">${genderText} · ${character.age}岁 · ${character.occupation}</div>
                        </div>
                    </div>
                    <div class="character-bio">
                        <p><strong>背景:</strong> ${character.background}</p>
                        <p><strong>性格:</strong> ${character.personality}</p>
                    </div>
                    <div class="card-actions">
                        <button class="icon-btn edit-character-btn" title="编辑">
                            <i class="fas fa-edit"></i>
                        </button>
                        <button class="icon-btn delete-character-btn" title="删除">
                            <i class="fas fa-trash"></i>
                        </button>
                        <button class="icon-btn use-character-btn" title="使用此人设聊天">
                            <i class="fas fa-comment"></i>
                        </button>
                    </div>
                `;
                
                // 添加事件监听器
                const useBtn = card.querySelector('.use-character-btn');
                useBtn.addEventListener('click', function() {
                    // 找到与此人设对应的联系人
                    let contact = contacts.find(c => c.name === character.name);
                    
                    if (!contact) {
                        // 创建新联系人
                        const newContactId = contacts.length > 0 ? Math.max(...contacts.map(c => c.id)) + 1 : 1;
                        contact = {
                            id: newContactId,
                            name: character.name,
                            status: "在线",
                            isAI: true,
                            avatarText: character.name.charAt(0)
                        };
                        
                        contacts.push(contact);
                        renderContactsList();
                    }
                    
                    // 查找或创建聊天
                    let existingChat = chats.find(chat => chat.contactId === contact.id);
                    
                    if (!existingChat) {
                        const newChatId = chats.length > 0 ? Math.max(...chats.map(c => c.id)) + 1 : 1;
                        existingChat = {
                            id: newChatId,
                            contactId: contact.id,
                            name: character.name,
                            lastMessage: "开始聊天吧",
                            time: "刚刚",
                            unread: 0,
                            messages: []
                        };
                        
                        chats.push(existingChat);
                        renderChatsList();
                    }
                    
                    openChat(existingChat.id);
                });
                
                const deleteBtn = card.querySelector('.delete-character-btn');
                deleteBtn.addEventListener('click', function() {
                    if (confirm(`确定要删除人设"${character.name}"吗？`)) {
                        characters = characters.filter(c => c.id !== character.id);
                        renderCharacterCards();
                    }
                });
                
                characterCards.appendChild(card);
            });
        }
        
        // 打开聊天
        function openChat(chatId) {
            const chat = chats.find(c => c.id === chatId);
            if (!chat) return;
            
            const contact = contacts.find(c => c.id === chat.contactId);
            if (!contact) return;
            
            // 更新当前聊天
            currentChat = chat;
            
            // 更新聊天界面信息
            chatWithName.textContent = chat.name;
            chatAvatar.textContent = contact.avatarText;
            chatStatus.textContent = contact.status;
            
            // 渲染消息
            renderMessages();
            
            // 切换到聊天界面
            pages.forEach(p => p.classList.add('hidden'));
            chatPage.classList.remove('hidden');
            
            // 重置未读消息数
            chat.unread = 0;
            renderChatsList();
            
            // 滚动到底部
            setTimeout(() => {
                chatMessages.scrollTop = chatMessages.scrollHeight;
            }, 100);
        }
        
        // 渲染消息
        function renderMessages() {
            if (!currentChat) return;
            
            chatMessages.innerHTML = '';
            
            currentChat.messages.forEach(message => {
                const messageElement = document.createElement('div');
                messageElement.className = `message ${message.sender === 'user' ? 'sent' : 'received'}`;
                
                const time = typeof message.time === 'string' ? message.time : formatTime(message.time);
                
                messageElement.innerHTML = `
                    <div class="message-text">${message.text}</div>
                    <div class="message-time">${time}</div>
                `;
                
                chatMessages.appendChild(messageElement);
            });
        }
        
        // 发送消息
        function sendMessage() {
            const messageText = messageInput.value.trim();
            if (!messageText || !currentChat) return;
            
            // 添加用户消息
            const messageId = currentChat.messages.length > 0 ? Math.max(...currentChat.messages.map(m => m.id)) + 1 : 1;
            const userMessage = {
                id: messageId,
                text: messageText,
                time: new Date(),
                sender: 'user'
            };
            
            currentChat.messages.push(userMessage);
            renderMessages();
            
            // 更新聊天列表中的最后消息
            currentChat.lastMessage = messageText.length > 20 ? messageText.substring(0, 20) + '...' : messageText;
            currentChat.time = '刚刚';
            currentChat.unread = 0;
            
            // 清空输入框
            messageInput.value = '';
            
            // 滚动到底部
            chatMessages.scrollTop = chatMessages.scrollHeight;
            
            // 模拟AI回复
            simulateAIResponse();
            
            // 更新聊天列表
            renderChatsList();
        }
        
        // 模拟AI回复
        function simulateAIResponse() {
            if (!currentChat) return;
            
            // 获取当前聊天的联系人
            const contact = contacts.find(c => c.id === currentChat.contactId);
            const isAI = contact ? contact.isAI : true;
            
            // 只有AI联系人才会回复
            if (!isAI) return;
            
            // 模拟AI思考时间
            setTimeout(() => {
                const messageId = currentChat.messages.length > 0 ? Math.max(...currentChat.messages.map(m => m.id)) + 1 : 1;
                
                // 根据联系人类型生成回复
                let aiResponse = "我收到了您的消息。";
                const lastUserMessage = currentChat.messages[currentChat.messages.length - 1].text.toLowerCase();
                
                if (lastUserMessage.includes('你好') || lastUserMessage.includes('hi') || lastUserMessage.includes('hello')) {
                    aiResponse = "你好！很高兴为您服务。有什么我可以帮助您的吗？";
                } else if (lastUserMessage.includes('功能') || lastUserMessage.includes('feature')) {
                    aiResponse = "本应用支持AI聊天、联系人管理、人设设置等功能。您可以在设置中配置API以获得更智能的回复。";
                } else if (lastUserMessage.includes('api') || lastUserMessage.includes('密钥')) {
                    aiResponse = "您可以在左侧边栏配置API地址和密钥。配置后，我可以调用更强大的AI模型与您对话。";
                } else if (lastUserMessage.includes('人设') || lastUserMessage.includes('角色')) {
                    aiResponse = "您可以在'人设管理'页面创建和管理不同的人设。每个人设都可以有独特的背景故事和性格特点。";
                } else if (contact && contact.name === "小美") {
                    aiResponse = "作为设计师，我可以和您讨论创意设计、色彩搭配和用户体验等方面的问题。您最近有什么设计项目吗？";
                } else if (contact && contact.name === "张明") {
                    aiResponse = "作为工程师，我可以和您讨论编程、算法和系统架构等技术问题。您最近在做什么项目？";
                }
                
                const aiMessage = {
                    id: messageId,
                    text: aiResponse,
                    time: new Date(),
                    sender: 'ai'
                };
                
                currentChat.messages.push(aiMessage);
                currentChat.lastMessage = aiResponse.length > 20 ? aiResponse.substring(0, 20) + '...' : aiResponse;
                currentChat.time = '刚刚';
                
                renderMessages();
                renderChatsList();
                
                // 滚动到底部
                chatMessages.scrollTop = chatMessages.scrollHeight;
            }, 1000 + Math.random() * 1000); // 随机延迟1-2秒，模拟真人打字
        }
        
        // 添加新人设
        addCharacterBtn.addEventListener('click', function() {
            const name = document.getElementById('charName').value.trim();
            const gender = document.getElementById('charGender').value;
            const age = parseInt(document.getElementById('charAge').value);
            const occupation = document.getElementById('charOccupation').value.trim();
            const background = document.getElementById('charBackground').value.trim();
            const personality = document.getElementById('charPersonality').value.trim();
            
            if (!name) {
                alert('请输入人设姓名');
                return;
            }
            
            const newId = characters.length > 0 ? Math.max(...characters.map(c => c.id)) + 1 : 1;
            
            const newCharacter = {
                id: newId,
                name,
                gender,
                age: age || 25,
                occupation: occupation || '未指定',
                background: background || '暂无背景信息',
                personality: personality || '暂无性格描述'
            };
            
            characters.push(newCharacter);
            renderCharacterCards();
            
            // 清空表单
            document.getElementById('charName').value = '';
            document.getElementById('charAge').value = '';
            document.getElementById('charOccupation').value = '';
            document.getElementById('charBackground').value = '';
            document.getElementById('charPersonality').value = '';
            
            alert('人设添加成功！');
        });
        
        // 字体美化按钮
        fontButtons.forEach(btn => {
            btn.addEventListener('click', function() {
                fontButtons.forEach(b => b.classList.remove('active'));
                this.classList.add('active');
                
                const font = this.getAttribute('data-font');
                applyFontStyle(font);
            });
        });
        
        // 应用字体样式
        function applyFontStyle(font) {
            document.body.classList.remove('font-elegant', 'font-cute', 'font-formal');
            
            if (font !== 'default') {
                document.body.classList.add(`font-${font}`);
            }
            
            // 保存到本地存储
            localStorage.setItem('aevo_font_style', font);
        }
        
        // 加载保存的字体样式
        function loadFontStyle() {
            const savedFont = localStorage.getItem('aevo_font_style') || 'default';
            
            fontButtons.forEach(btn => {
                if (btn.getAttribute('data-font') === savedFont) {
                    btn.classList.add('active');
                    applyFontStyle(savedFont);
                } else {
                    btn.classList.remove('active');
                }
            });
        }
        
        // 发送消息事件
        sendMessageBtn.addEventListener('click', sendMessage);
        messageInput.addEventListener('keypress', function(e) {
            if (e.key === 'Enter') {
                sendMessage();
            }
        });
        
        // 格式化时间
        function formatTime(date) {
            if (!(date instanceof Date)) {
                date = new Date(date);
            }
            
            const hours = date.getHours().toString().padStart(2, '0');
            const minutes = date.getMinutes().toString().padStart(2, '0');
            return `${hours}:${minutes}`;
        }
        
        // 初始化字体样式
        loadFontStyle();
        
        // 添加字体样式CSS
        const style = document.createElement('style');
        style.textContent = `
            .font-elegant {
                font-family: 'Times New Roman', 'STSong', 'SimSun', serif;
                letter-spacing: 0.5px;
            }
            
            .font-cute {
                font-family: 'Comic Sans MS', '楷体', cursive;
                letter-spacing: 0.5px;
            }
            
            .font-formal {
                font-family: 'Arial', '黑体', sans-serif;
                letter-spacing: 0.3px;
                font-weight: 500;
            }
        `;
        document.head.appendChild(style);
        
        // 返回聊天列表（模拟返回按钮）
        document.addEventListener('keydown', function(e) {
            if (e.key === 'Escape' && !chatPage.classList.contains('hidden')) {
                pages.forEach(p => p.classList.add('hidden'));
                document.getElementById(`${currentPage}Page`).classList.remove('hidden');
            }
        });
        
        // 添加一个模拟的返回按钮到聊天界面
        const chatHeader = document.querySelector('.chat-header');
        const backButton = document.createElement('button');
        backButton.className = 'icon-btn';
        backButton.innerHTML = '<i class="fas fa-arrow-left"></i>';
        backButton.style.marginRight = '15px';
        backButton.addEventListener('click', function() {
            pages.forEach(p => p.classList.add('hidden'));
            document.getElementById(`${currentPage}Page`).classList.remove('hidden');
        });
        chatHeader.insertBefore(backButton, chatHeader.firstChild);
    </script>
</body>
</html>
